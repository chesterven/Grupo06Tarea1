<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<TableLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:paddingTop="4dip">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Menu_Tablas_CS16008"
            android:textSize="18sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/menutablas" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:onClick="solicitudesPrimeraRevision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Menu_Tablas_CS16008_Solicitudes_Primera_Revision" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:onClick="notasEstudianteEvaluacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Menu_Tablas_CS16008_Notas_Estudiante_Evaluacion" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:onClick="solicitudImpresion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Menu_Tablas_CS16008_Solicitud_Impresion" />
    </TableRow>
</TableLayout>
</ScrollView>